{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/cuentas/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/cuentas/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/cuentas/infrastructure",
  "projects": {
    "cuentas": {
      "type": "application",
      "root": "apps/cuentas/infrastructure",
      "entryFile": "main",
      "sourceRoot": "apps/cuentas/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cuentas/tsconfig.app.json"
      }
    },
    "servicios": {
      "type": "application",
      "root": "apps/servicios/infrastructure",
      "entryFile": "main",
      "sourceRoot": "apps/servicios/src",
      "compilerOptions": {
        "tsConfigPath": "apps/servicios/tsconfig.app.json"
      }
    }
  }
}